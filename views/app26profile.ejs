<!-- this is an ejs template  -->

<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        body{background:skyblue;font-family:verdana;color:#fff;padding:30px;}
        h1{font-size:48px;text-transform: uppercase;letter-spacing:2px;text-align:center;}
        h2{font-size:43px;text-transform: uppercase;letter-spacing:2px;text-align:center;}
        p,li{font-size: 32px;text-align: center;}
    </style>
    <title>Document</title>
</head>
<body>
    <!-- 27 add partial view into profile view -->
    <%include partial/nav.ejs %>
    <h1>Welcome to the profile of <%=person%></h1>
    <p><strong>Age: </strong><%=data.age%></p>
    <p><strong>Job: </strong><%=data.job%></p>
    <h2>Hobby</h2> 
    <!-- display each hobby here with li tag -->
    <ul>
        <!-- output some js code in ejs -->
        <%data.hobbies.forEach(function(item){%>
            <li><%=item%></li>
        <%})%>
    </ul>
</body>
</html>